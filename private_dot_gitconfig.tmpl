[ui "color"]
	ui = always
[color]
	ui = true
[core]
	autocrlf = input
	safecrlf = true
	# https://sebastiandedeyne.com/setting-up-a-global-gitignore-file/
	excludesfile = ~/.gitignore_global
[merge]
	tool = nvim -d
[alias]
	a = add -p
	c = commit
	co = checkout
	cl = log -p -- ':(exclude)Cargo.lock'
	d = diff
	f = push --force-with-lease
	last = log -1 HEAD
	lg = log --oneline
	p = pull
	pu = push
	s = status
	sa = "!f() { git stash apply stash^{/$*}; }; f"
	sl = stash list
	# https://stackoverflow.com/a/11688523/472927
	ss = "!f() { git stash show stash^{/$*} -p; }; f"
[pull]
	ff = only
[push]
	# https://stackoverflow.com/questions/21839651/git-what-is-the-difference-between-push-default-matching-and-simple
	default = simple
	autoSetupRemote = true
[help]
	# https://blog.gitbutler.com/why-is-git-autocorrect-too-fast-for-formula-one-drivers/
	autocorrect = prompt
[url "git@github.com:"]
	insteadOf = gh:
[url "git@gitlab.com:"]
	insteadOf = gl:
[github]
	user = graemer957
[diff]
	algorithm = histogram
	indentHeuristic = true
[protocol]
	version = 2
[init]
	defaultBranch = main
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[gpg]
	format = ssh
[gpg "ssh"]
	{{ if eq .chezmoi.os "darwin" -}}
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
	{{- else -}}
	program = /opt/1Password/op-ssh-sign
	{{- end }}
[commit]
	gpgsign = true
# Sign all work projects with a separate key
[includeIf "gitdir:~/dev/work/"]
    path = ~/.gitconfig_work
